{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "removeComments": false,
    "outDir": "out",
    "moduleResolution": "node",
    "rootDir": ".",
    "module": "esnext",
    "resolveJsonModule": true,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
  },
  "include": [ "src/*.ts", "test/*.ts" ]
}